<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.plate.management.mapper.AllplateMapper">

    <resultMap type="Allplate" id="AllplateResult">
        <result property="id" column="id" />
        <result property="plate" column="plate" />
        <result property="time" column="time" />
        <result property="location" column="location" />
    </resultMap>

    <sql id="selectAllplateVo">
        select id, plate, time, location, deviceId from allPlate
    </sql>

    <select id="selectAllplateList" parameterType="Allplate" resultMap="AllplateResult">
        <include refid="selectAllplateVo"/>
        <where>
            <if test="plate != null and plate != ''"> and plate like concat('%', #{plate}, '%')</if>
            <if test="deviceId != null and deviceId != ''"> and deviceId like concat('%', #{deviceId}, '%')</if>
            <if test="time != null"> and date(time) = #{time}</if>
        </where>
        order by time desc
    </select>

    <select id="selectAllplateById" parameterType="Long" resultMap="AllplateResult">
        <include refid="selectAllplateVo"/>
        where id = #{id}
    </select>

    <insert id="insertAllplate" parameterType="Allplate" useGeneratedKeys="true" keyProperty="id">
        insert into allPlate
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="plate != null and plate != ''">plate,</if>
            <if test="time != null">time,</if>
            <if test="location != null">location,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="plate != null and plate != ''">#{plate},</if>
            <if test="time != null">#{time},</if>
            <if test="location != null">#{location},</if>
         </trim>
    </insert>

    <update id="updateAllplate" parameterType="Allplate">
        update allPlate
        <trim prefix="SET" suffixOverrides=",">
            <if test="plate != null and plate != ''">plate = #{plate},</if>
            <if test="time != null">time = #{time},</if>
            <if test="location != null">location = #{location},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAllplateById" parameterType="Long">
        delete from allPlate where id = #{id}
    </delete>

    <delete id="deleteAllplateByIds" parameterType="String">
        delete from allPlate where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>